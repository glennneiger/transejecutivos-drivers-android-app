<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/car_view_padding"
    android:paddingLeft="@dimen/car_view_padding"
    android:paddingRight="@dimen/car_view_padding"
    android:paddingTop="@dimen/car_view_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ProgressBar
        android:id="@+id/service_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars = "vertical"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/service_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:text="@string/prompt_accept_service"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorPrimaryTextLight" />

                <Button
                    android:id="@+id/button_decline"
                    android:layout_below="@+id/button_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:elevation="10dp"
                    android:text="@string/prompt_decline_service"
                    android:background="@color/colorError"
                    android:textColor="@color/colorPrimaryTextLight" />

            </RelativeLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/car_view_padding">

                    <TextView
                        android:id="@+id/txtview_start_date"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Ago 10/2017"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@android:drawable/ic_lock_idle_alarm"/>

                    <TextView
                        android:id="@+id/txtview_service_start_time"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:text="20:00"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/car_view_padding">

                    <TextView
                        android:id="@+id/txtview_reference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="U456456-1"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/car_view_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14dp"
                        android:text="@string/prompt_source"/>

                    <TextView
                        android:id="@+id/txtview_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Jjjjjjjjjjjjjjjj jjjjjjjjjjjj jjjj "
                        android:textColor="@color/colorSecondaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/car_view_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14dp"
                        android:text="@string/prompt_destiny"/>

                    <TextView
                        android:id="@+id/txtview_destiny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Xxxxxxxxxxxxxxxx xxxxxxxxxxx cxxxxxxxxxxxx "
                        android:textColor="@color/colorSecondaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtview_pax_cant_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/car_view_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        android:tint="@color/orange" />

                    <TextView
                        android:id="@+id/txtview_pax_cant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 pasajeros"
                        android:textColor="@color/orange"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/txtview_fly_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/car_view_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_airplanemode_active_black_24dp"/>

                    <TextView
                        android:id="@+id/txtview_fly"
                        android:layout_below="@+id/txtview_pax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vuelo jsjsksjs"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:id="@+id/txtview_observations_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/car_view_padding"
                    android:paddingBottom="@dimen/car_view_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="14dp"
                        android:text="@string/prompt_observations"/>

                    <TextView
                        android:id="@+id/txtview_observations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Xxxxxxxxxxxxxx"
                        android:textColor="@color/colorError"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/shadow"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtview_passenger_name"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pepito Prez"/>

                <TextView
                    android:id="@+id/txtview_passenger_company"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="My Company"/>

                <TextView
                    android:id="@+id/txtview_event"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Event"/>

                <TextView
                    android:id="@+id/txtview_passenger_phone"
                    android:textColor="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="12333333"/>

                <TextView
                    android:id="@+id/txtview_passenger_email"
                    android:layout_below="@+id/txtview_passenger_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Email"/>

                <Button
                    android:id="@+id/button_call_passenger"
                    android:layout_below="@+id/txtview_passenger_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp"
                    android:elevation="10dp"
                    android:text="@string/prompt_call_passenger"
                    android:background="@color/green"
                    android:textColor="@color/colorPrimaryTextLight" />

                <Button
                    android:id="@+id/button_sms_passenger"
                    android:layout_below="@+id/button_call_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:text="@string/prompt_sms_passenger_service"
                    android:background="@color/orange"
                    android:textColor="@color/colorPrimaryTextLight" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>