    <ProgressBar
        android:id="@+id/service_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/service_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtview_service_info_title"
                android:hint="@string/service_info_title"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtview_start_date"
                    android:layout_below="@+id/txtview_service_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_reference"
                    android:layout_below="@+id/txtview_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_source"
                    android:layout_below="@+id/txtview_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_destiny"
                    android:layout_below="@+id/txtview_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_pax_cant"
                    android:layout_below="@+id/txtview_destiny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_pax"
                    android:layout_below="@+id/txtview_pax_cant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_observations"
                    android:layout_below="@+id/txtview_pax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_status"
                    android:layout_below="@+id/txtview_observations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtview_passenger_info_title"
                android:hint="@string/passenger_info_title"
                android:textColor="@color/colorPrimaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtview_passenger_name"
                    android:layout_below="@+id/txtview_passenger_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_passenger_phone"
                    android:layout_below="@+id/txtview_passenger_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_passenger_email"
                    android:layout_below="@+id/txtview_passenger_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/txtview_passenger_fly"
                    android:layout_below="@+id/txtview_passenger_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>