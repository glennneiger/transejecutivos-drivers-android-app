<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_passenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/shadow"
        card_view:cardCornerRadius="4dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/cardview_light_background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/txtview_passenger_complete_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pepito Prez"
                android:textColor="@color/colorPrimaryText"
                android:textSize="22dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_flag"
                    android:tint="@color/blue" />

                <TextView
                    android:id="@+id/txtview_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtview_passenger_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone1"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <TextView
                    android:id="@+id/txtview_passenger_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone2"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtview_passenger_email1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email1"
                    android:textSize="15dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10" />

                <TextView
                    android:id="@+id/txtview_passenger_email2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email2"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_call_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="16dp"
                android:background="@color/green"
                android:elevation="10dp"
                android:text="@string/prompt_call_passenger"
                android:textColor="@color/colorPrimaryTextLight" />

            <Button
                android:id="@+id/button_sms_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:elevation="10dp"
                android:text="@string/prompt_sms_passenger_service"
                android:textColor="@color/colorPrimaryTextLight" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>